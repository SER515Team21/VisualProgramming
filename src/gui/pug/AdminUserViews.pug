mixin userViewsMixin(userType, userSelected)
    .tab-switcher
        +tabbedFrame([userType + ' View', 'New ' + userType, 'Edit ' + userType ], [userType + 'View',
            "New" + userType + "Course" + userType + "Page", userType + "EditorPage"])
        .view.active(id='CourseView')
            h1 View User
            h2 First Name
            h3(value=userSelected.firstName)
            h2 Last Name
            h3(value=userSelected.lastName)
            h2 User Name
            h3(value=userSelected.userName)
            h2 Role
            h3(value=userSelected.role)
        .view(id='CourseEditorPage')
            h1 Edit User
            h2 First Name
            input(type='text' id='edit' + userType +'FirstName' value=userSelected.firstName)
            h2 Last Name
            input(type='text' id='edit' + userType + 'LastName' value=userSelected.lastName)
            h2 User Name
            input(type='text' id='edit'+ userType + 'UserName' value=userSelected.userName)
            h2 Role
            input(type='text' id='edit'+ userType +'Role' value=userSelected.role)
